@{
    ViewData["Title"] = "Consulta CEP";
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Index" method="post">
    <div class="mb-3">
        <label for="cep" class="form-label">CEP</label>
        <input type="text" name="cep" id="cep" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar Endere√ßo</button>
</form>

@if (ViewData["Rua"] != null)
{
    <div class="mt-4">
        <h5>Resultado para CEP: @ViewData["Cep"]</h5>
        <dl class="row">
            <dt class="col-sm-2">Rua</dt>
            <dd class="col-sm-10">@ViewData["Rua"]</dd>
            <dt class="col-sm-2">Bairro</dt>
            <dd class="col-sm-10">@ViewData["Bairro"]</dd>
            <dt class="col-sm-2">Cidade</dt>
            <dd class="col-sm-10">@ViewData["Cidade"]</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@ViewData["Estado"]</dd>
        </dl>
    </div>
}
