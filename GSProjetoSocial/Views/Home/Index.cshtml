@{
    ViewData["Title"] = "Página Inicial";
    Layout = "_Layout";
}
<div class="text-center mb-5">
    <h1 class="display-4">RedeSOS</h1>
    <p class="lead">Auxiliamos famílias e voluntários afetados por desastres naturais.</p>
</div>
<div class="row g-4">
    <div class="col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Famílias</h5>
                <p class="card-text flex-grow-1">Gerencie o cadastro de famílias afetadas.</p>
                <a asp-controller="Familia" asp-action="Index" class="btn btn-outline-primary mt-3">Ver Famílias</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Geocode</h5>
                <p class="card-text flex-grow-1">Buscar coordenadas de um endereço.</p>
                <a asp-controller="GeocodeMvc" asp-action="Index" class="btn btn-outline-dark mt-3">Geocode</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Consulta CEP</h5>
                <p class="card-text flex-grow-1">Buscar endereço via CEP.</p>
                <a asp-controller="AddressMvc" asp-action="Index" class="btn btn-outline-primary mt-3">Consulta CEP</a>
            </div>
        </div>
    </div>
</div>
